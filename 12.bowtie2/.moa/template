description: Run BOWTIE2 on an set of input files (query) vs a database index.
filesets:
  fq_forward_input:
    category: input
    help: Fastq input files - forward
    optional: false
    pattern: '*/*_1.fq'
    type: set
  fq_reverse_input:
    category: input
    help: Fastq input files - reverse
    optional: true
    pattern: '*/*_2.fq'
    source: fq_forward_input
    type: map
  db:
    category: prerequisite
    help: The (basename of the) bowtie2 database to use.
    optional: false
    pattern: ../20.bowtiedb/db
    type: single
  output:
    category: output
    help: Bam output file
    pattern: ./*.bam
    source: fq_forward_input
    type: map
moa_id: bowtie2_pe
